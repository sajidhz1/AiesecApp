<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Aiesec_App.Views.NewComplainPage"
		Title="New Item">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Save" Clicked="Save_Clicked" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout Spacing="20" Padding="15">
			<Label Text="Title" FontSize="Medium" />
			<Entry Text="{Binding Item.Name}" FontSize="Small" />
            <Label Text="Complain/Request" FontSize="Medium" />
            <Switch IsToggled="{Binding Item.Done}"  HorizontalOptions="StartAndExpand"></Switch>
			<Label Text="Description" FontSize="Medium" />
			<Editor Text="{Binding Item.Notes}" FontSize="Small"  Margin="0" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
